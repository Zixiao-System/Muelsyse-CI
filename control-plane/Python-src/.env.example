# Muelsyse-CI Environment Configuration
# Copy this file to .env and fill in the values

# Django settings
DJANGO_SETTINGS_MODULE=muelsyse.settings.development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# Deployment mode: 'saas' or 'self_hosted'
DEPLOYMENT_MODE=self_hosted

# Database
DB_NAME=muelsyse
DB_USER=muelsyse
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Secret encryption key for storing secrets
SECRET_ENCRYPTION_KEY=your-encryption-key-32-chars-min

# Artifact storage
ARTIFACT_STORAGE_BACKEND=local
ARTIFACT_STORAGE_PATH=/var/lib/muelsyse/artifacts
